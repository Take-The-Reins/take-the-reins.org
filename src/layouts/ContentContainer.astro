---
interface Props {
  maxWidth?: "max-w-6xl" | "max-w-5xl" | "max-w-4xl" | "max-w-3xl";
}
const { maxWidth = "max-w-4xl" } = Astro.props;
---
<main class="flex flex-col items-center bg-stone-200 x-container px-4 py-8">
  <div class:list={{
    "flex flex-col items-center z-0": true,
    "max-w-6xl": maxWidth === "max-w-6xl",
    "max-w-5xl": maxWidth === "max-w-5xl",
    "max-w-4xl": maxWidth === "max-w-4xl",
    "max-w-3xl": maxWidth === "max-w-3xl",
  }} style="z-index: 0;">
    <slot />
  </div>
</main>
<style>
.x-container {
  min-height: 70vh;
}
</style>
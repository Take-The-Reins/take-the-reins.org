---
interface Props {
  foregroundColor: "light" | "dark";
  href: string;
  primary?: boolean;
  target?: "_self" | "_blank";
}
const { foregroundColor, href, primary = false, target = "_self" } = Astro.props;
---
<a
  class:list={[
    "px-4 py-2 transition",
    { "border rounded-lg hover:shadow-xl": primary },
    { "border-slate-100 hover:bg-orange-500 hover:border-orange-500": primary && foregroundColor === "light" },
    { "border-orange-950 hover:bg-orange-200 hover:border-orange-300": primary && foregroundColor === "dark" },
  ]}
  href={href}
  target={target}>
  <span
    class:list={[
      "font-semibold transition",
      { "text-slate-50": foregroundColor === "light" },
      { "text-slate-950": foregroundColor === "dark" },
      { "hover:text-slate-300": !primary && foregroundColor === "light" },
      { "hover:text-slate-700": !primary && foregroundColor === "dark" },
    ]}>
    <slot />
  </span>
</a>

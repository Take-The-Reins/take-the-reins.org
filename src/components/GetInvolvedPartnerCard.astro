---
type Props = {
  href: string;
  logoSrc: string;
  name1?: string;
  name2?: string;
}
const { href, logoSrc, name1, name2 } = Astro.props;
---
<a href={href} target="_blank" >
  <div class="flex flex-row items-center justify-center bg-stone-50 p-4 rounded-lg gap-4 hover:shadow-xl transition">
    <img src={logoSrc} style="max-height: 100px; min-height: 100px;"/>
    {(name1 || name2) && (
      <div class="flex flex-col">
        {name1 && <span class="text-md font-bold">{name1}</span>}
        {name2 && <span class="text-sm italic">{name2}</span>}
      </div>
    )}
  </div>
</a>
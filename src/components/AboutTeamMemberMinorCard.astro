---
interface Props {
  imageSrc: string;
  title: string;
}
const { imageSrc, title } = Astro.props;
---
<div class="flex flex-row items-center gap-4 border-stone-300 border rounded-xl px-4 py-2 hover:bg-stone-100 hover:shadow-md transition-all">
  <img class="rounded-lg shadow-md" src={imageSrc} style="max-width:75px;"/>
  <div class="flex flex-col gap-2">
    <div class="flex flex-row flex-wrap items-baseline gap-2">
      <span class="text-md text-stone-800">
        {title}
      </span>
    </div>
  </div>
</div>

---
interface Props {
  description: string;
  imageSrc: string;
  name: string;
  title: string;
}
const { description, imageSrc, name, title } = Astro.props;
---
<div class="flex flex-row items-center gap-4">
  <img class="rounded-md x-img" src={imageSrc} />
  <div class="flex flex-col">
    <span class="text-xl font-semibold leading-tight">{name}</span>
    <span class="text-md leading-tight">{title}</span>
    <span class="text-sm font-thin leading-tight">{description}</span>
  </div>
</div>
<style>
.x-img {
  max-width: 250px;
}
</style>

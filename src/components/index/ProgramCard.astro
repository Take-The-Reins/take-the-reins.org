---
interface Props {
  ctaHref?: string;
  description: string;
  imageSrc: string;
  title: string;
}
const { ctaHref, description, imageSrc, title } = Astro.props;
---
<div class="flex flex-row items-center flex-wrap lg:flex-nowrap gap-4">
  <img class="rounded-md shadow-sm x-hero-image" src={imageSrc} />
  <div class="flex flex-col">
    <span class="text-xl font-bold">{title}</span>
    <span class="text-md font-light pb-4">{description}</span>
    {ctaHref && <a href={ctaHref}>
      <span class="text-sm text-orange-400 font-semibold hover:text-orange-600 hover:underline">
        Learn More
      </span>
    </a>}
  </div>
</div>
<style>
.x-hero-image {
	width: 250px;
}
</style>
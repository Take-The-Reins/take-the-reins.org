---
interface Props {
  href: string;
  label: string;
}
const { href, label } = Astro.props;
---
<a class:list={{
  "x-container px-2 md:px-3 py-1 md:py-2": true,
  "text-lg md:text-xl font-semibold": true,
  "flex flex-row items-center justify-center grow": true,
  "hover:bg-orange-100 hover:shadow-xl": true,
  "rounded-xl transition-all": true,
}} href={href}>
  <p class="x-text transition-all">{label}</p>
</a>
<style>
  .x-container {}
  .x-text {
    color: #f8fafc;
  }
  .x-container:hover .x-text {
    color: #9a3412;
  }
</style>

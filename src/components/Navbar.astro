  <a href="/">
    <Image
      alt="Women Investors Network logo"
      height={120}
      src="/ttr-logo.png"
      width={120}
    />
  </a>
  <span class="text-2xl font-bold text-stone-200">Take The Reins</span>
  <div class="grow" />
  <div class="flex flex-row items-center">
    <NavbarLink href="/about">ABOUT US</NavbarLink>
    <NavbarLink href="/events">EVENTS</NavbarLink>
    <NavbarLink href="/donate" primary>
      DONATE
    </NavbarLink>
  </div>
</div>

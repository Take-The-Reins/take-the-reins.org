---
interface Props {
  href: string;
  target?: "_self" | "_blank";
}
const { href, target } = Astro.props;
---
<a
  class="rounded bg-orange-50 border border-orange-200 px-8 py-4 hover:bg-orange-200 transition-all"
  href={href}
  target={target}
>
  <span class="text-orange-600 text-lg font-semibold">
    <slot />
  </span>
</a>